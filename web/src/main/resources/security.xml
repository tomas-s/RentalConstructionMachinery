<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <authentication-manager>
        <authentication-provider user-service-ref="loginFacade">
            <password-encoder hash="sha-256">
            </password-encoder>
        </authentication-provider>
    </authentication-manager>


    <http auto-config="true">
        <intercept-url pattern="/customer/**" access="ROLE_ADMIN" />
        <form-login login-page="/login" authentication-failure-url="/login/failure"
                    username-parameter="username"
                    password-parameter="password"
                    default-target-url="/hello" />
        <logout invalidate-session="true" logout-success-url="/login/"
                logout-url="/j_spring_security_logout" />
        <access-denied-handler error-page="/login/failure"/>
        <session-management invalid-session-url="/login/">
            <concurrency-control max-sessions="1"
                                 expired-url="/login/" />
        </session-management>
    </http>


